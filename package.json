{
  "name": "vendi",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "backend/core",
    "backend/product-service",
    "backend/identity-service"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:core": "npm run build --workspace=@vendi/core",
    "build:identity": "npm run build --workspace=identity-service",
    "build:product": "npm run build --workspace=product-service",
    "build:all:identity": "npm run build:core && npm run build:identity && npm run build:product",
    "dev:core": "npm run build:watch --workspace=@vendi/core",
    "dev:identity": "npm run start:dev --workspace=identity-service",
    "dev:product": "npm run start:dev --workspace=product-service",
    "dev:all": "npm run dev:core & npm run dev:identity & npm run dev:product"
  },
  "dependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "typeorm": "^0.3.28",
    "pg": "^8.13.1"
  }
}
